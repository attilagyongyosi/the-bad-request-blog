{
    "include": [ "./**/*" ],
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "lib": [ "dom", "es2017" ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}
